{
  "name": "hmcts-task-manager",
  "version": "1.0.0",
  "description": "HMCTS Task Management System - Monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=backend && npm run build --workspace=frontend",
    "test": "npm run test --workspace=backend && npm run test --workspace=frontend",
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@types/node": "24.5.0",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.2",
    "postcss": "8.5.6"
  },
  "keywords": [
    "hmcts",
    "task-management",
    "monorepo"
  ],
  "author": "HMCTS",
  "license": "MIT",
  "dependencies": {
    "express": "5.1.0",
    "cors": "2.8.5",
    "helmet": "8.1.0",
    "express-rate-limit": "8.1.0",
    "dotenv": "17.2.2",
    "sqlite3": "5.1.7",
    "path": "0.12.7",
    "uuid": "13.0.0",
    "express-validator": "7.2.1",
    "supertest": "7.1.4",
    "vite": "7.1.5",
    "@vitejs/plugin-react": "5.0.2",
    "react-dom": "19.1.1",
    "react-router-dom": "7.9.1",
    "react-hot-toast": "2.6.0",
    "date-fns": "4.1.0",
    "react-hook-form": "7.62.0",
    "@testing-library/jest-dom": "6.8.0",
    "next": "15.5.3",
    "react": "19.1.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.544.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7",
    "zustand": "5.0.8",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "jest": "30.1.3"
  }
}
